#!/usr/bin/env bash

# Create tilesets for zoom 0 through 18
for i in $(seq 0 18)
do
    qgis_process run qgis:tilesxyzmbtiles --distance_units=meters --area_units=m2 --ellipsoid=EPSG:7030 --project_path=$(pwd)/world-toner-tiles.qgz --EXTENT='-8768493.7864,-8740625.5815,4260768.9191,4284287.5714 [EPSG:3857]' --ZOOM_MIN=$i --ZOOM_MAX=$i --DPI=96 --BACKGROUND_COLOR='rgba( 0, 0, 0, 0.00 )' --TILE_FORMAT=0 --QUALITY=75 --METATILESIZE=4 --OUTPUT_FILE=$(pwd)/raleigh-$i.mbtiles
done;
